{
  "name": "@lovie-tech/formation-mcp-server",
  "version": "1.0.23",
  "description": "MCP server for company formation - Form your US company via Claude",
  "main": "dist/mcp/index.js",
  "bin": {
    "formation-mcp-server": "dist/mcp/index.js"
  },
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node dist/mcp/index.js",
    "start:http": "node dist/mcp/index.js --http",
    "start:http:dev": "ts-node src/mcp/index.ts --http",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:verbose": "jest --verbose",
    "lint": "eslint src tests --ext .ts",
    "typecheck": "tsc --noEmit",
    "vercel:dev": "vercel dev",
    "vercel:deploy": "vercel --prod"
  },
  "keywords": [
    "mcp",
    "mcp-server",
    "model-context-protocol",
    "claude",
    "company-formation",
    "business",
    "llc",
    "corporation",
    "startup"
  ],
  "author": "Lovie Team",
  "license": "MIT",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "axios": "^1.6.2",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.0",
    "inquirer": "^8.2.5",
    "open": "^11.0.0",
    "ora": "^5.4.1",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/inquirer": "^9.0.7",
    "@vercel/node": "^3.0.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
